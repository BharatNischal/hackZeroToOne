    <body>
<% include partials/nav %>
<div class="overlay"></div>
    

<div class="container-fluid mt-5">
    <h1 class="text-center" style="font-family:fantasy;color:white ; font-size: 55px; border-bottom: 2px solid white; padding:10px; font-weight:100;">Find Someone!!</h1>

    <div class="row">
    <div class="col-sm-3">

    </div>
    <div style="border-radius:8px; padding: 30px; "   class="col-sm-6">

    <form action="/findmatch"  method="post" class="opacity">

    <div class="form-group">
        <label style="font-family:fantasy; color:white; font-size: 20px;">Select Category</label>
        <select class="form-control" name="category" id="#" style="border-radius:20px; margin-bottom: 15px;">
                <% interests.forEach(function(interest){%>
                    <option value="<%= interest.category %>"><%= interest.category%></option>
                <% })%>  
        </select>
        <div class="form-group">
                <label style="font-family:fantasy; color:white; font-size: 20px;">Starting Time</label>
            <input type="time" name="fTime" class="form-control" style="border-radius:20px;">
        </div>
        <div class="form-group">
                <label style="font-family:fantasy; color:white ; font-size: 20px;">Ending Time</label>
                <input type="time" name="eTime" class="form-control" style="border-radius:20px;">
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Submit"style="border-radius:20px;">
            </div>
        
    </div>
    </form>
    </div>
    <div class="col-sm-3"></div>
</div>
</div>

